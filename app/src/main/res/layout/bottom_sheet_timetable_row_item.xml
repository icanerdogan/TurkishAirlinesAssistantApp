<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewAirlines"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/icon_turkish_airlines_circle"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:orientation="vertical">

<!--            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Departure Time"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"/>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDepartureTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="07:30"
                android:textSize="17sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_bold"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_start_line"
                android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDepartureAirport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="IST"
                android:textSize="17sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_bold"/>

<!--            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Departure Airport"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"/>-->

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_connect_airport"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:orientation="vertical">

<!--            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Arrival Time"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"/>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewArrivalTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="08:40"
                android:textSize="17sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_bold"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_end_line"
                android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewArrivalAirport"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ESB"
                android:textSize="17sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_bold"/>

<!--            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Arrival Airport"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Flight Date"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewFlightDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="21.12.2023"
                android:textSize="15sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_black"
                android:layout_marginBottom="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Flight Code"
                android:textSize="10sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_light"
                android:layout_marginTop="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewFlightCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TK2122"
                android:textSize="15sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/mulish_black"/>

        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>